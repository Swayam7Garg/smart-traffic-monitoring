# Environment Variables Configuration
# Copy this file to .env and update values

# Application
APP_NAME=Traffic Management System
APP_VERSION=1.0.0
DEBUG=true

# API
API_V1_PREFIX=/api/v1

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=traffic_management

# YOLO Model Configuration
YOLO_MODEL_PATH=../data/models/yolov8n.pt
YOLO_CONFIDENCE=0.5

# Video Processing
VIDEO_INPUT_PATH=../data/videos
VIDEO_OUTPUT_PATH=../data/outputs
FRAME_SKIP=2

# Traffic Signal Configuration
MIN_GREEN_TIME=15
MAX_GREEN_TIME=120
DEFAULT_GREEN_TIME=30

# Alert Thresholds
CONGESTION_THRESHOLD=20
VIOLATION_THRESHOLD=5

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (Comma-separated list of allowed origins)
# For production: Add your Vercel frontend URL
# Example: ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:5173
# Use "*" to allow all origins (not recommended for production)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000
